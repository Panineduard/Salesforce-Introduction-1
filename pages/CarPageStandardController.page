<apex:page lightningStylesheets="true" standardController="Car__c">
    <apex:form>
        <apex:pageBlock title="New Car" mode="edit">
            <apex:pageBlockSection title="Details Section" columns="2">
                <apex:inputField value="{!Car__c.Name}"/>
            </apex:pageBlockSection>
            <apex:pageBlockButtons>
                <apex:commandButton action="{!save}" value="Save"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>